use Application\ValueObject\Data;

$locales = Data::MY_LOCALES;
$count = count($locales); // get int
?>
<?php
if (1 < $count) {
?>
<ul>
<?php
    foreach ($locales as $locale) {
        if (!null == $this->routeMatch()) {
            $name = $this->routeMatch()->getMatchedRouteName();
            $params = $this->routeMatch()->getParams();
            $params['locale'] = $locale; 
        } else {
            $name = 'home';
            $params = [];
        }
        if ($locale != $this->locale()) {
?>
    <li>
        <a href="<?= $this->url($name, $params); ?>">
            <?= $locale ?>
        </a>
    </li>
<?php
        }
    }
?>
</ul>
<?php
}

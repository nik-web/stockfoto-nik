<div id="meta-nav-wrapper">
    <ul id="meta-nav">
    <?php
        foreach ($this->container as $page) {
            if (!$this->navigation('meta_nav')->accept($page)) {
                continue; 
            } 
    ?>
        <li class="meta-nav-item">
        <?php
            if ($page->isActive()) {
        ?>
            <span class="active">
                <?= $this->translate($page->getLabel()) ?>
            </span>
        <?php
            } else {
        ?>
            <a class="meta-nav-link" href="<?= $page->getHref() ?>">
                <?= $this->translate($page->getLabel()) ?>
            </a>
        <?php
            }
        ?>
        </li>
    <?php
        }
    ?>
    </ul>
</div>